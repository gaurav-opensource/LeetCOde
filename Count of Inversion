  int n = arr.length; 
        int inv_count = 0;  

        for (int i = 0; i < n - 1; i++) {
            for (int j = i + 1; j < n; j++) {
                // If the current element is greater than the next,
                // increment the count
                if (arr[i] > arr[j])
                    inv_count++;
            }
        }
        return inv_count; 
    }
}